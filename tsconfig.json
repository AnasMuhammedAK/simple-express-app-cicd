{
  "compilerOptions": {
    /* Target environment */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    /* Project structure */
    "rootDir": "./src",
    "outDir": "./dist",
    /* Type support */
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    /* Useful flags */
    "sourceMap": true,
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    /* Required for NodeNext ESM + TS */
    "moduleDetection": "force",
    "noEmitOnError": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}